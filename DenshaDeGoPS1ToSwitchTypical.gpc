    else if (get_val(ACCEL_2_Z) < 0.5 && get_val(BUTTON_4) > 99.5 && get_val(BUTTON_21) < 0.5 && get_val(BUTTON_5) > 99.5) { // B2
        LAST_STICK_2_Y = -40;
        LAST_BUTTON_8 = 0;
        set_val(STICK_2_Y, -40);
        set_val(BUTTON_8, 0);
    }
